<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/size_medium">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student info"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <EditText
            android:id="@+id/stud_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="0.8"
            android:background="@drawable/et_bg"
            android:hint="#NO"
            android:inputType="number"
            android:maxLines="1"
            android:nextFocusDown="@id/stud_name"
            android:padding="10dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/stud_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/et_bg"
            android:hint="Name"
            android:inputType="textCapWords"
            android:nextFocusDown="@id/stud_parent_phone1"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="14sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/stud_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/et_bg"
        android:layout_marginTop="20dp"
        android:hint="Phone Number"
        android:inputType="phone"
        android:maxLines="1"
        android:ems="12"
        android:padding="10dp"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Parent info"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <EditText
            android:id="@+id/stud_parent_phone1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/et_bg"
            android:hint="Phone number 1"
            android:inputType="phone"
            android:maxLines="1"
            android:nextFocusDown="@id/stud_parent_phone2"
            android:padding="10dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/stud_parent_phone2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/et_bg"
            android:hint="Phone number 2"
            android:inputType="phone"
            android:maxLines="1"
            android:padding="10dp"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>